{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src", "globals.d.ts", "types.ts", "__tests__","./@types/**/*.ts"
  ],
  "files": [
    "webpack.config.js"
  ]
}